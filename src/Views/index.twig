{% extends 'includes/template.twig' %}
{% import 'includes/macro.twig' as component %}

{% block content %}
    <div id="accueil">
        <h2>
            Gestion des frais 
            <small> - 
                <span id="type">{{ session.type|replace({'VISTR': 'Visiteur', 'CPTBL': "Comptable"}) }}</span> : 
                {{ session.prenom ~ ' ' ~ session.nom }} 
            </small>
        </h2>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="fa fa-bookmark"></span>
                        Navigation
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        {% if session.type == "VISTR" %}
                            <div class="col-xs-12 col-md-12">
                                <a href="{{ component.url('frais/saisir') }}" class="btn btn-success btn-lg" role="button">
                                    <span class="fa fa-pencil"></span>
                                    <br>Renseigner la fiche de frais
                                </a>
                                <a href="{{ component.url('frais/afficher') }}"
                                   class="btn btn-primary btn-lg" role="button">
                                    <span class="fa fa-list-alt"></span>
                                    <br>Afficher mes fiches de frais
                                </a>
                            </div>
                        {% else %}
                            <div class="col-xs-12 col-md-12">
                                <a href="{{ component.url('frais/valider') }}" class="btn btn-success btn-lg" role="button">
                                    <span class="fa fa-check"></span>
                                    <br>Valider les fiches de frais
                                </a>
                                <a href="{{ component.url('frais/suivre') }}"
                                   class="btn btn-primary btn-lg" role="button">
                                    <span class="fa fa-eur"></span>
                                    <br>Suivre le paiement des fiches de frais
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}